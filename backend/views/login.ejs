<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Keremet - Login</title>
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/login.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <div class="login-content">
            <div class="logo">
                <a href="/">
                    <img src="/images/whitelogo.png" alt="Keremet Logo">
                </a>
            </div>

            <div class="role-selector">
                <div class="role-option active" data-role="patient">Patient</div>
                <div class="role-option" data-role="doctor">Doctor</div>
            </div>
            <div class="message-container">
            <% if (error) { %>
                <div class="alert alert-danger">
                <%= error %>
                </div>
            <% } %>
            
            <% if (success_msg) { %>
                <div class="alert alert-success">
                <%= success_msg %>
                </div>
            <% } %>
            </div>
            <form class="login-form" action="/users/login" method="POST">
                <!-- Rest of your form remains the same -->
                <div class="form-group">
                    <input type="text" id="email" name="email" required>
                    <label for="email">Email or number</label>
                </div>

                <div class="form-group doctor-field" style="display: none;">
                    <input type="text" id="doctorId" name="doctorId">
                    <label for="doctorId">Doctor's ID</label>
                </div>

                <div class="form-group">
                    <input type="password" id="password" name="password" required>
                    <label for="password">Password</label>
                </div>

                <div class="form-footer">
                    <label class="remember-me">
                        <input type="checkbox" name="remember">
                        <span class="checkmark"></span>
                        Remember me
                    </label>
                    <a href="/forgot-password" class="forgot-password">Forgot Password?</a>
                </div>

                <button type="submit" class="login-btn">Login</button>

                <div class="register-link">
                    Don't have an account? <a href="/users/register">Register now</a>
                </div>
            </form>
        </div>
        
        <div class="illustration-container">
            <img src="/images/log.svg" alt="Medical Illustration" class="medical-illustration">
        </div>
    </div>

    <script>
    document.addEventListener("DOMContentLoaded", () => {
        const roleOptions = document.querySelectorAll(".role-option");
        const doctorField = document.querySelector(".doctor-field");

        roleOptions.forEach(option => {
            option.addEventListener("click", () => {
                roleOptions.forEach(opt => opt.classList.remove("active"));
                option.classList.add("active");
                doctorField.style.display = option.getAttribute("data-role") === "doctor" ? "block" : "none";
            });
        });
    });
    </script>
</body>
</html>